<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DSCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_m">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/jarvis_surface"
        android:padding="@dimen/spacing_s">

        <!-- URL and Status Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- URL and Host Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/url_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textStyle="bold"
                    tools:text="https://jsonplaceholder.typicode.com/posts/1" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/host_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?android:attr/textColorSecondary"
                    tools:text="jsonplaceholder.typicode.com" />

            </LinearLayout>

            <!-- Status Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/spacing_s"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:id="@+id/status_indicator"
                    android:layout_width="@dimen/spacing_s"
                    android:layout_height="@dimen/spacing_s"
                    android:layout_marginEnd="@dimen/spacing_xs"
                    android:background="@drawable/circle_shape"
                    android:backgroundTint="@color/success_color" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/status_code_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textStyle="bold"
                    tools:text="200" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_s" />

        <!-- Method, Time, and Duration Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- HTTP Method Badge -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/method_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_background"
                android:paddingHorizontal="@dimen/spacing_s"
                android:paddingVertical="@dimen/spacing_xs"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:text="GET" />

            <View
                android:layout_width="@dimen/spacing_s"
                android:layout_height="0dp" />

            <!-- Time -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/timestamp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?android:attr/textColorSecondary"
                tools:text="14:23:45" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Duration -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?android:attr/textColorSecondary"
                android:textStyle="bold"
                tools:text="245ms" />

        </LinearLayout>

        <!-- Progress Bar -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/duration_progress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xs"
            android:layout_marginTop="@dimen/spacing_xs"
            app:indicatorColor="@color/success_color"
            app:trackCornerRadius="@dimen/radius_xs"
            tools:progress="50" />

        <!-- Error Message (if any) -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="@color/error_color"
            android:visibility="gone"
            tools:text="Request timeout"
            tools:visibility="visible" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>