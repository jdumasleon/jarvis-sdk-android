<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Search Section -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_input_layout"
        style="@style/WhiteOutlinedTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_m"
        android:hint="@string/search_api_calls"
        app:startIconDrawable="@drawable/ic_search"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Status Filter Section -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_m"
        android:layout_marginTop="@dimen/spacing_s"
        android:layout_marginBottom="@dimen/spacing_xs"
        android:text="STATUS"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorSecondary" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_m"
        android:layout_marginBottom="@dimen/spacing_s"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/status_chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="@dimen/spacing_s"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_status_all"
                style="@style/CustomFilterChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/filter_all" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_success"
                style="@style/CustomFilterChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_success" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_error"
                style="@style/CustomFilterChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_error" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <!-- HTTP Methods Filter Section -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_m"
        android:layout_marginBottom="@dimen/spacing_xs"
        android:text="HTTP METHODS"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorSecondary" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_m"
        android:layout_marginBottom="@dimen/spacing_s"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/method_chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="@dimen/spacing_s"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_method_all"
                style="@style/CustomFilterChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/filter_all" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_get"
                style="@style/CustomFilterChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GET" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_post"
                style="@style/CustomFilterChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POST" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_put"
                style="@style/CustomFilterChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PUT" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_delete"
                style="@style/CustomFilterChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELETE" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <!-- Main Content Area -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- API Calls RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/api_calls_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingHorizontal="@dimen/spacing_m"
                android:paddingTop="@dimen/spacing_xs"
                android:paddingBottom="@dimen/spacing_m" />

            <!-- Loading State -->
            <LinearLayout
                android:id="@+id/loading_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_m" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/generating_requests"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />

            </LinearLayout>

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/empty_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_m"
                    android:text="@string/no_api_calls"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/reload_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inspector_reload" />

            </LinearLayout>

            <!-- Error State -->
            <LinearLayout
                android:id="@+id/error_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_m"
                    android:text="@string/error_loading_data"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/retry_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/retry" />

            </LinearLayout>

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>