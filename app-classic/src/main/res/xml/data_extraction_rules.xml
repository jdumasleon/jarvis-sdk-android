<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude all shared preferences from cloud backup -->
        <exclude domain="sharedpref" path="." />
        <!-- Exclude databases from cloud backup -->
        <exclude domain="database" path="." />
    </cloud-backup>
    <device-transfer>
        <!-- Exclude sensitive data from device transfer -->
        <exclude domain="sharedpref" path="sensitive_prefs.xml" />
    </device-transfer>
</data-extraction-rules>